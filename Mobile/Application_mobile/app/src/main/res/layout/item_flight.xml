<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:elevation="4dp"
app:cardCornerRadius="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- Logo de la compagnie aérienne -->
        <ImageView
            android:id="@+id/airlineLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_airline_logo" />

        <TextView
            android:id="@+id/airlineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Delta"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/flightDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New York (JFK) ➜ Los Angeles (LAX)"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/flightDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2h 45m"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/flightClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business class"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/flightPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$169.00"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>

